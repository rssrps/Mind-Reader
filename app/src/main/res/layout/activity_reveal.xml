<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="raman.in.mindreader.Reveal">

    <ImageView
        android:id="@+id/carddisplay"
        android:layout_width="120dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/red"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp" />

    <TextView
        android:id="@+id/yourcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your card is"
        android:layout_marginLeft="8dp"
        android:textSize="24sp"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/likedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liked the trick?  Please Rate us"
        android:layout_marginLeft="8dp"
        android:textSize="22sp"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carddisplay"
        android:layout_marginTop="65dp" />

    <Button
        android:id="@+id/yes"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Rate"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/beginbtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/likedit" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© Ramandeep Singh 2018"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="#aaa"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
